<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.germanofilho.twc_test">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.germanofilho.app.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.germanofilho.app.feature.splash.presentation.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.germanofilho.app.feature.settings.presentation.view.SettingsActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name="com.germanofilho.app.feature.home.presentation.view.HomeActivity"
                android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>